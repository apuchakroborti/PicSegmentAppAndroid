<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="apu.picseg.CaptureToSegmentActivity"
    tools:showIn="@layout/activity_capture_to_segment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:textSize="30sp"
            android:textColor="#0000A0"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Segmented Picture"
            android:id="@+id/segmentMessegeText"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:id="@+id/mainComponentImage"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:id="@+id/subComponentImage"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <Button
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:text="Save"
                android:textSize="35sp"
                android:textColor="#0000A0"
                android:textStyle="bold"
                android:id="@+id/saveButton"
                android:layout_gravity="bottom" />

            <Button
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:text="New"
                android:textSize="35sp"
                android:textColor="#0000A0"
                android:textStyle="bold"
                android:id="@+id/newButton"
                android:layout_gravity="bottom" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
